{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "ES2015",
    "lib": ["es2018"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "declaration": true,
    "module": "CommonJS",
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"]
}
